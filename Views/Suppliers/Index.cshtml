@model IEnumerable<IcSMP.Models.SupplierModel>

@{
    ViewData["Title"] = "Suppliers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data-container">
    <h1>Suppliers</h1>
    <a asp-action="Create" class="btn-custom create-btn">
        <i class="fa-regular fa-square-plus"></i>
        Create New
    </a>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
                <th class="hide-1350px">
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
                <th class="hide-1480px">
                @Html.DisplayNameFor(model => model.ContactTitle)
            </th>
                <th class="hide-600px">
                @Html.DisplayNameFor(model => model.City)
            </th>
                <th class="hide-1080px">
                @Html.DisplayNameFor(model => model.Street)
            </th>
                <th class="hide-1080px">
                @Html.DisplayNameFor(model => model.Number)
            </th>
                <th class="hide-1250px">
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
                <th class="hide-1250px">
                @Html.DisplayNameFor(model => model.Municipality)
            </th>
                <th class="hide-600px">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
                <th class="hide-600px">
                @Html.DisplayNameFor(model => model.Email)
            </th>
                <th class="hide-1080px">
                    @Html.DisplayNameFor(model => model.BankAccount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-reverse">
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td class="hide-1350px">
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td class="hide-1480px">
                @Html.DisplayFor(modelItem => item.ContactTitle)
            </td>
                    <td class="hide-600px">
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td class="hide-1080px">
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td class="hide-1080px">
                @Html.DisplayFor(modelItem => item.Number)
            </td>
                    <td class="hide-1250px">
                @Html.DisplayFor(modelItem => item.Zipcode)
            </td>
                    <td class="hide-1250px">
                @Html.DisplayFor(modelItem => item.Municipality)
            </td>
                    <td class="hide-600px">
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
                    <td class="hide-600px">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="hide-1080px">
                @Html.DisplayFor(modelItem => item.BankAccount)
            </td>
                    <td class="action-link-space">
                        <span class="action-icon-hover">
                            <i class="fa-solid fa-pen-to-square action-icon"></i>
                            <span class="action-link">
                                @Html.ActionLink("...", "Edit", new {  id=item.Id  })
                            </span>

                        </span>
                        <span class="action-icon-hover">
                            <i class="fa-solid fa-circle-info action-icon"></i>
                            <span class="action-link">
                                @Html.ActionLink("...", "Details", new { id=item.Id })
                            </span>
                        </span>
                        <span class="action-icon-hover">
                            <i class="fa-solid fa-trash action-icon"></i>
                            <span class="action-link">
                                @Html.ActionLink("...", "Delete", new { id=item.Id  })
                            </span>
                        </span>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>
