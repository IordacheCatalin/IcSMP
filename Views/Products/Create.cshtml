@model IcSMP.Models.ProductModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="data-container">
    <h1>Product Create</h1>
    <hr />
    <div class="row operations-container">
        <div class="col-md-4">
            <form asp-action="Create" class="form-design">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @* <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductNumber" class="control-label"></label>
                    <input asp-for="ProductNumber" class="form-control" />
                    <span asp-validation-for="ProductNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Buc" class="control-label"></label>
                    <input asp-for="Buc" class="form-control" />
                    <span asp-validation-for="Buc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Caen" class="control-label"></label>
                    <input asp-for="Caen" class="form-control" />
                    <span asp-validation-for="Caen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group viewBag-design">
                    <label asp-for="CategoryId" class="control-label"></label>
                    @*<input asp-for="CategoryId" class="form-control" />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>*@
                    @*<select name="CategoryId" class="form-control" asp-items="@ViewBag.dataCategory"></select>*@ @*------ Varianta cu Select list*@
                    @Html.DropDownList("CategoryId", new SelectList(ViewBag.dataCategory, "Id" , "Name"),new{ style = "width: -webkit-fill-available;"})
                </div>
                <div class="form-group viewBag-design">
                    <label asp-for="SupplierId" class="control-label"></label>
                    @*<input asp-for="SupplierId" class="form-control" />
                    <span asp-validation-for="SupplierId" class="text-danger"></span>*@
                    @Html.DropDownList("SupplierId", new SelectList(ViewBag.data, "Id" , "CompanyName"),new{ style = "width: -webkit-fill-available;"})
                    @*<select name="SupplierId" class="form-control" asp-items="@ViewBag.data"></select>*@ @*------ Varianta cu Select list*@
                </div>
                <div class="form-group">
                    <label asp-for="BuyPrice" class="control-label"></label>
                    <input asp-for="BuyPrice" class="form-control" />
                    <span asp-validation-for="BuyPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SellPrice" class="control-label"></label>
                    <input asp-for="SellPrice" class="form-control" />
                    <span asp-validation-for="SellPrice" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label asp-for="SellPriceVat" class="control-label"></label>
                    <input asp-for="SellPriceVat" class="form-control" readonly/>
                    <span asp-validation-for="SellPriceVat" class="text-danger"></span>
                </div>*@
                <div class="form-group form-action">
                    <button type="button" class="btn btn-primary">
                        <a asp-action="Index">Back to List</a>
                    </button>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    img {
        display: none
    }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
